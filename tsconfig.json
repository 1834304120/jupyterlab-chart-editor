{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./lib",
    "lib": [
      "es5",
      "es2015.core",
      "es2015.promise",
      "es2017.object",
      "es2015.collection",
      "dom"
    ],
    "jsx": "react",
    "types": ["node"]
  },
  "include": ["src/*"]
}
